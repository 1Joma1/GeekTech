<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">
    <ImageView
        android:id="@+id/item_user_profile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/profile"/>
    <TextView
        android:id="@+id/item_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/item_user_profile"
        android:textColor="@color/black"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"/>
    <TextView
        android:id="@+id/item_user_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/item_user_profile"
        android:layout_below="@id/item_user_name"
        android:textColor="@color/black"
        android:layout_marginStart="4dp"/>
    <TextView
        android:id="@+id/item_user_thread"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/item_user_name"
        android:layout_marginTop="4dp"
        android:textColor="@color/black"
        android:layout_marginStart="40dp"/>
    <TextView
        android:id="@+id/item_user_coin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/item_user_password"
        android:layout_below="@id/item_user_name"
        android:textColor="@color/black"
        android:layout_marginStart="40dp"/>
    <TextView
        android:id="@+id/item_user_role"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/item_user_thread"
        android:layout_marginTop="4dp"
        android:textColor="@color/black"
        android:layout_marginStart="40dp"/>
</RelativeLayout>