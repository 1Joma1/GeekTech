<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/item_geekcoin_history_name_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_toStartOf="@id/item_geekcoin_history_arrow"
        android:textColor="@color/black"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/item_geekcoin_history_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" -> "
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:textColor="@color/black"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/item_geekcoin_history_name_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/item_geekcoin_history_arrow"
        android:layout_marginTop="8dp"
        android:textColor="@color/black"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/item_geekcoin_history_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12.4.2020"
        android:layout_below="@id/item_geekcoin_history_name_from"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="4dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/item_geekcoin_history_date"
        android:background="@color/black"/>
</RelativeLayout>