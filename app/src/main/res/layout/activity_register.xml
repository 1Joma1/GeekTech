<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/code"
        android:scaleType="centerCrop"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#4D000000"/>

    <ImageView
        android:id="@+id/register_profile"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="32dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/profile"/>

    <TextView
        android:id="@+id/register_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_below="@id/register_profile"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="4dp"
        android:text="Name" />

    <EditText
        android:id="@+id/register_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/register_name_text"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:inputType="textPersonName"
        android:background="@color/white"
        android:padding="12dp" />

    <TextView
        android:id="@+id/register_phone_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_below="@id/register_name"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="12dp"
        android:text="Phone number" />

    <EditText
        android:id="@+id/register_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/register_phone_text"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:inputType="phone"
        android:background="@color/white"
        android:padding="12dp"
        android:text="+" />

    <TextView
        android:id="@+id/register_code_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/register_phone"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:translationY="20dp"
        android:alpha="0"
        android:visibility="invisible"
        android:textColor="@color/white"
        android:text="SMS code" />

    <EditText
        android:id="@+id/register_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/register_code_text"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:inputType="number"
        android:maxLength="6"
        android:translationY="20dp"
        android:alpha="0"
        android:visibility="invisible"
        android:background="@color/white"
        android:hint="XXXXXX"
        android:padding="12dp" />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:indeterminateTint="@color/colorAccent"
        android:layout_marginBottom="32dp"
        android:layout_centerHorizontal="true"/>
    <Button
        android:id="@+id/register_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="32dp"
        android:background="@color/colorAccent"
        android:text="Log In"
        android:textAllCaps="false"
        android:textColor="@color/white" />

</RelativeLayout>