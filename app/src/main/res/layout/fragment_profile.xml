<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
<ImageView
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:src="@drawable/bg_profile_wall"/>
    <ImageView
        android:id="@+id/profile_profile"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:src="@drawable/profile"/>
    <TextView
        android:id="@+id/profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_profile"
        android:text="Name"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/profile_thread_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_name"
        android:text="Thread:"
        android:layout_marginTop="12dp"
        android:layout_marginStart="12dp"/>
    <TextView
        android:id="@+id/profile_thread"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_name"
        android:text="12"
        android:layout_marginTop="12dp"
        android:layout_marginStart="4dp"
        android:layout_toEndOf="@id/profile_thread_text"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/profile_geek_coin_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_thread"
        android:text="GeekCoin:"
        android:layout_marginTop="12dp"
        android:layout_marginStart="12dp"/>
    <TextView
        android:id="@+id/profile_geek_coin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_thread"
        android:text="4"
        android:layout_marginTop="12dp"
        android:layout_marginStart="4dp"
        android:layout_toEndOf="@id/profile_geek_coin_text"
        android:textColor="@color/black"/>
</RelativeLayout>